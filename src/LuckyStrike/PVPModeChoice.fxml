<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.text.Text?>
<BorderPane fx:id="p" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="LuckyStrike.PVPModeChoice">
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <bottom>
      <HBox spacing="5.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="10.0"/>
         </padding>
      </HBox>
   </bottom>
   <center>
      <VBox alignment="CENTER" spacing="20.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="10.0"/>
         </BorderPane.margin>
         <Button id="1" fx:id="first" mnemonicParsing="false" onAction="#setTextchoice" text="Normal Mode"/>
         <Button id="2" fx:id="two" mnemonicParsing="false" onAction="#setTextchoice" text="Attack Only"/>
      </VBox>
   </center>
</BorderPane>
